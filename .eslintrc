{
  "extends": ["@grafana/eslint-config"],
  "root": true,
  "plugins": [
    "no-only-tests"
  ],
  "rules": {
    "no-only-tests/no-only-tests": "error",
    "react/prop-types": "off"
  },
  "overrides": [
    {
      "files": [
        "packages/plutono-ui/src/components/uPlot/**/*.{ts,tsx}",
        "public/app/**/*.{ts,tsx}"
      ],
      "rules": {
        "react-hooks/rules-of-hooks": "off",
        "react-hooks/exhaustive-deps": "off"
      }
    }
  ]
}
